<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Znamka2">

    <TextView
        android:id="@+id/Znamka2_Meno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/Znamka2_predmet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stara známka:" />

        <TextView
            android:id="@+id/Znamka2_stara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Neni" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nová známka:" />

        <EditText
            android:id="@+id/Znamka2_nova"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Zadaj novú známku"
            android:inputType="text" />
    </LinearLayout>

    <Button
        android:id="@+id/Znamka2_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aktualizuj známku" />

    <Button
        android:id="@+id/Znamka2_naspak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Naspäť" />

    <Button
        android:id="@+id/Znamka2_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vymaž známku" />
</LinearLayout>